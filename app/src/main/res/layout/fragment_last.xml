<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinnerLast"

        android:layout_width="255dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#004cff"
        android:entries="@array/leagueArray"
        android:paddingRight="7dp"></Spinner>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvLast"
        android:layout_below="@+id/spinnerLast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="-37dp"
        android:layout_toStartOf="@+id/spinerNext"
        android:text="Choose League  :" />

</RelativeLayout>